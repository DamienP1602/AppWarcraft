<UserControl x:Class="WpfApp1.UserControls.UserScreen.CharacterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UserControls.UserScreen"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="400">

    <Border Margin="4" BorderBrush="Black" Background="Gray" BorderThickness="2" CornerRadius="15">

        <Grid>
            <TextBlock x:Name="CharacterName" Text="Name" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" Height="25" Width="200" Margin="10,5,0,0"
                       FontSize="15"></TextBlock>

            <TextBlock x:Name="CharacterClass" Text="Class" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Left" Height="25" Width="200" Margin="10,110,0,0"
                       FontSize="15"></TextBlock>

            <Border x:Name="CharacterIcon" Width="75" Height="75" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" CornerRadius="50" BorderThickness="2" BorderBrush="Black">

            </Border>

            <Button x:Name="ModifyCharacter" VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="25" Content="Change Equipment" Margin="100,0,0,0"
                        Background="#FF920000" BorderBrush="White" Foreground="#FFFFC700" FontFamily="Arial">
                <Button.Effect>
                    <DropShadowEffect/>
                </Button.Effect>
            </Button>

        </Grid>


    </Border>


</UserControl>
