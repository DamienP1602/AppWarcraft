<UserControl x:Class="WpfApp1.UserControls.UserScreen.UserScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UserControls.UserScreen"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/UserControls/UserScreen/UserScreen.png"/>
        </Grid.Background>
        <ListBox x:Name="CharacterList" Width="600" Height="900" HorizontalAlignment="Right" Margin="0,0,50,0" Background="#7F000000">
            <ListBox.Effect>
                <DropShadowEffect/>
            </ListBox.Effect>
            
        </ListBox>
    </Grid>
</UserControl>
